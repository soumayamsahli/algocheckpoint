VAR 
   set1 , set2 : ARRAY_OF INTEGER[10];
   HT : HASH_TABLE<integer,integer>
   i : integer
   count : INTEGER := 0
   sum : INTEGER := 0
   set_Keys : ARRAY_OF INTEGER [20]
BEGIN

   FOR i FROM 0 TO set1.length STEP step 1  DO
    IF (HT.lookup(set1[i]) = true ) THEN
        count := HT.get(set1[i])
        HT.insert(set1[i] , count+1)
